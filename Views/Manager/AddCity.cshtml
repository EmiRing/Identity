@{
}
@model CitySelectViewModel
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City.CityName">City</label>
                <input asp-for="City.CityName" class="form-control" />
            </div>
            <input asp-for="Country.Id" value="@Model.Country.Id" hidden />
            
            <button asp-action="AddCity" id="update-profile-button" type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>