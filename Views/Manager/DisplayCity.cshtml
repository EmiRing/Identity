@{
}
@model CitySelectViewModel
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City.CityName">City</label>
                <input asp-for="City.CityName" value="@Model.City.CityName" class="form-control" />
            </div>
            <input asp-for="City.Id" value="@Model.City.Id" hidden />
            <div class="form-group">
                <label asp-for="City.CountryId">Country</label>
                <select type="text" id="Gender" asp-for="City.CountryId" class="form-control">
                    <option value=""></option>
                    @foreach (var country in Model.Countries)
                    {
                        if (country.Id == Model.Country.Id)
                        {
                            <option value="@country.Id" selected>@country.CountryName</option>
                        }
                        else
                        {
                            <option value="@country.Id">@country.CountryName</option>
                        }
                    }
                </select>
            </div>
            <button asp-action="UpdateCity" id="update-profile-button" type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>