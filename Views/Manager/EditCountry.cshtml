@{
}
@model Country
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName">City</label>
                <input asp-for="CountryName" value="@Model.CountryName" class="form-control" />
            </div>
            <input asp-for="Id" value="@Model.Id" hidden />

            <button asp-action="EditCountry" id="update-profile-button" type="submit" class="btn btn-primary">Edit</button>
            <button asp-action="DeleteCountry" asp-route-Id="@Model.Id" id="update-profile-button" type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
</div>